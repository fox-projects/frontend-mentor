{
	"@parcel/transformer-css": {
		"drafts": {
			"nesting": true
		}
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"parcel": "^2.9.3",
		"postcss": "^8.4.20",
		"postcss-sorting": "^8.0.2",
		"prettier": "^3.0.0",
		"stylelint": "^15.10.2",
		"stylelint-config-idiomatic-order": "^9.0.0",
		"stylelint-order": "^6.0.3"
	},
	"postcss": {
		"plugins": {
			"postcss-sorting": {
				"order": [
					"custom-properties",
					"dollar-variables",
					"at-variables",
					"declarations",
					"rules",
					"at-rules"
				],
				"properties-order": [
					"position",
					"display",
					"top",
					"bottom",
					"left",
					"right",
					"inset"
				],
				"unspecified-properties-position": "bottom"
			}
		}
	},
	"scripts": {
		"start": "parcel serve ./index.html --dist-dir ./output",
		"build": "parcel build ./index.html",
		"format": "run-s format:prettier format:stylelint",
		"format:stylelint": "stylelint --fix \"./**/*.css\"",
		"format:prettier": "prettier --write \"./**/*.{html,css,js,md}\""
	},
	"targets": {
		"default": {
			"distDir": "./output",
			"publicUrl": "/frontend-mentor"
		}
	},
	"stylelint": {
		"extends": [
			"stylelint-config-idiomatic-order"
		],
		"plugins": [
			"stylelint-order"
		]
	}
}
